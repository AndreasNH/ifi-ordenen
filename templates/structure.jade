ul(class=root.className)
  each _class in root.structure
    li
      h3= _class.name
      if _class.members.length > 0
        ul.overview
          each username in _class.members
            - var individual = contents[root.individual][username]['index.md'].metadata
            li
              a(href=locals.url + root.path + username)
                img.profile(src=locals.url + root.path + username + '/thumb.jpg', title=individual.title)
      else
        p= root.noMembersExplanation