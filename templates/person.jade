extends layout


block prepend title
  | #{page.title} -

block vars
  - mainclass = 'person';

block before_title
  img.profile(src='thumb.jpg')

block after_title
  - var _title = contents.title[page.metadata.current]['index.md'].metadata;
  p Tildelt #{_title.title} av Hennes Majestet Keiserpingvinen den Fornemmes orden

block content
  != page.html
  if page.metadata.reason
    p
      strong= page.metadata.reason
  if page.metadata.previous
    each titleName in page.metadata.previous
      - _title = contents.person[page.metadata.username][titleName].index
      header
        h2 Tidligere tildelt: #{_title.metadata.rank}
        p
          a(href=locals.url+'/person/year')  Tildelt #{_title.metadata.appointed}
      != _title.html
      p
        strong= _title.metadata.reason
