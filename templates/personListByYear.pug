extends layout

block prepend title
  | #{page.title} -

block content
  - const years = env.helpers.getYearsForPerson(contents)
  nav.years
    ul
      each year in Object.keys(years)
        li
          h2(id=year)= year
          ul.overview
            each person in years[year]
              li
                a(href=person.url)
                  img.profile(src=env.helpers.getThumb(person), title=person.metadata.title)