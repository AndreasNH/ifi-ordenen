// article is set by templates including this template
figure
  a(href=article.url)
    img(src=env.helpers.getImage(article))
  figcaption #{article.metadata.image.desc}
    if article.metadata.image.takenby
      |  (Foto: #{article.metadata.image.takenby})
h3
  a(href=article.url)
    != article.metadata.title
p Publisert #{moment(article.metadata.date).format('LL')}
!= marked(article.metadata.ingress)
p
  a(href=article.url) Les mer