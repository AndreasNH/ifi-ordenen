extends layout

block prepend title
  | #{page.title} -

block vars
  - mainclass = 'article';

block content
  figure
    img(src="image.jpg")
    figcaption #{page.metadata.image.desc}
      if page.metadata.image.takenby
        |  (Foto: #{page.metadata.image.takenby})
  p
    strong
      != marked(page.metadata.ingress)
  if page.metadata.person
    - const persons = page.metadata.person.split(', ')
    ul.overview
      each username in persons
        - const individual = contents.person[username]['index.md'].metadata
        li
          a(href=env.helpers.getPersonUrl(locals, username))
            img.profile(src=env.helpers.getPersonThumb(locals, username), title=individual.title)
  != page.html
  aside
    p Publisert #{moment(page.metadata.date).format('LL')}